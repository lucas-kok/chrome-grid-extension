{
	"manifest_version": 3,
	"name": "Layout Grid Overlay",
	"version": "1.1",
	"description": "Create draggable layout lines to check alignment on web pages.",
	"icons": {
		"16": "images/icon.png",
		"32": "images/icon.png",
		"48": "images/icon.png",
		"128": "images/icon.png"
	},
	"permissions": ["activeTab", "scripting", "storage"],
	"action": {
		"default_popup": "popup/popup.html",
		"default_title": "Layout Grid",
		"default_icon": "images/icon.png"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["scripts/content.js"],
			"css": ["styles/overlay.css", "styles/measure.css"]
		}
	]
}

{
	"manifest_version": 3,
	"name": "Layout Grid Overlay",
	"version": "1.0",
	"description": "Create draggable layout lines to check alignment on web pages.",
	"permissions": ["activeTab", "scripting", "storage"],
	"action": {
		"default_popup": "popup/popup.html",
		"default_title": "Layout Grid"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["scripts/content.js"],
			"css": ["styles/overlay.css"]
		}
	]
}
